<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Gradauation_Details"
    tools:showIn="@layout/activity_gradauation__details">

    <TextView
        android:id="@+id/gd"
        android:layout_width="197dp"
        android:layout_height="31dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="20dp"
        android:text="Graduation Details"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textUGQualification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textUGQualification"
        android:layout_width="315dp"
        android:layout_height="46dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Qualification"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/textUGInstitute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gd" />


    <EditText
        android:id="@+id/textUGInstitute"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Institute"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/textUGUniversity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUGQualification" />

    <EditText
        android:id="@+id/textUGUniversity"
        android:layout_width="315dp"
        android:layout_height="44dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="42dp"
        android:ems="10"
        android:hint="Board/University"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUGInstitute" />

    <EditText
        android:id="@+id/textUGScore"
        android:layout_width="315dp"
        android:layout_height="41dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Score"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/textUGCoursestart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUGUniversity" />

    <EditText
        android:id="@+id/textUGCoursestart"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Course Start"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textUGCourseend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUGScore" />

    <EditText
        android:id="@+id/textUGCourseend"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="Course End"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/graduationSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUGCoursestart" />

    <Button
        android:id="@+id/graduationSubmit"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="24dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUGCourseend" />

    <ProgressBar
        android:id="@+id/progressBarGraduation"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        android:layout_marginEnd="195dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/graduationSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUGCourseend" />

</androidx.constraintlayout.widget.ConstraintLayout>